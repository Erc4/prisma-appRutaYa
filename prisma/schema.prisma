generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id               Int        @id @default(autoincrement())
  apellido_paterno String
  apellido_materno String
  nombre           String
  email            String     @unique
  password         String
  id_rol           Int
  no_licencia      Int?
  id_ruta          Int
  reportes         Reportes[]
  turnos           Turnos[]
  rol              Roles      @relation(fields: [id_rol], references: [id])
  ruta             Rutas      @relation(fields: [id_ruta], references: [id])
}

model Roles {
  id       Int        @id @default(autoincrement())
  rol      String     @unique
  usuarios Usuarios[]
}

model Rutas {
  id          Int           @id @default(autoincrement())
  descripcion String
  activo      Boolean       @default(true)
  nombre      String
  puntos      Puntos_ruta[]
  usuarios    Usuarios[]
}

model Puntos_ruta {
  id       Int    @id @default(autoincrement())
  id_ruta  Int
  altitud  Float?
  longitud Float?
  ruta     Rutas  @relation(fields: [id_ruta], references: [id])
}

model Vehiculos {
  id        Int        @id @default(autoincrement())
  no_placas String
  no_unidad String
  capacidad Int
  reportes  Reportes[]
  turnos    Turnos[]
}

model Turnos {
  id          Int        @id @default(autoincrement())
  id_chofer   Int
  id_vehiculo Int
  descripcion String?
  hora_inicio DateTime?
  hora_fin    DateTime?
  reportes    Reportes[]
  chofer      Usuarios   @relation(fields: [id_chofer], references: [id])
  vehiculo    Vehiculos  @relation(fields: [id_vehiculo], references: [id])
}

model Tipos_reporte {
  id          Int        @id @default(autoincrement())
  descripcion String
  reportes    Reportes[]
}

model Reportes {
  id              Int           @id @default(autoincrement())
  id_chofer       Int
  id_vehiculo     Int
  id_turno        Int
  id_tipo_reporte Int
  descripcion     String
  estado          String
  chofer          Usuarios      @relation(fields: [id_chofer], references: [id])
  tipo            Tipos_reporte @relation(fields: [id_tipo_reporte], references: [id])
  turno           Turnos        @relation(fields: [id_turno], references: [id])
  vehiculo        Vehiculos     @relation(fields: [id_vehiculo], references: [id])
}
